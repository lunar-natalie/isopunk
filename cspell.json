{
    "version": "0.2",
    "ignorePaths": [
        "*.in"
    ],
    "dictionaryDefinitions": [],
    "dictionaries": [],
    "words": [
        "Cppcheck",
        "Cygwin",
        "Deinitializes",
        "DIRN",
        "DOXYFILE",
        "Doxygen",
        "endcond",
        "GLFW",
        "glfwm",
        "headerfile",
        "ipkengine",
        "isopunk",
        "MAINPAGE",
        "MDFILE",
        "POSIX",
        "Stroustrup",
        "threeal",
        "vkfw",
        "Vulkan",
        "WINDOWPOS"
    ],
    "ignoreWords": [],
    "import": [],
    "patterns": [
        {
            "name": "library-name",
            "pattern": "lib*"
        },
        {
            "name": "cmake-option",
            "pattern": "-D.*"
        },
        {
            "name": "markdown-code-block",
            "pattern": "/^(\\s*`{3,}).*[\\s\\S]*?^\\1/gmx"
        }
    ],
    "languageSettings": [
        {
            "languageId": "markdown",
            "ignoreRegExpList": [
                "markdown-code-block"
            ]
        },
        {
            "languageId": "*",
            "ignoreRegExpList": [
                "library-name",
                "cmake-option"
            ]
        }
    ]
}
